# Database Configuration
DB_URL=sqlite:///./data/demo.db
# For PostgreSQL: postgresql://user:password@localhost:5432/retail_db
# For MySQL: mysql+pymysql://user:password@localhost:3306/retail_db

# Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=retailai2025
SECRET_KEY=your-secret-key-here-change-in-production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Application Settings
APP_ENV=development  # development, staging, production
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=True

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=data/uploads

# OCR Settings
TESSERACT_CMD=/usr/bin/tesseract  # Path to tesseract executable
OCR_LANGUAGE=tur  # Language for OCR (tur for Turkish)

# API Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Cache Settings (Redis)
REDIS_ENABLED=False
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=300

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@retail-ai.com

# External APIs (optional)
VISION_API_KEY=your-vision-api-key
VISION_API_ENABLED=False

# Security
CORS_ORIGINS=*  # Comma-separated list of allowed origins
ALLOWED_HOSTS=*  # Comma-separated list of allowed hosts
HTTPS_ONLY=False  # Set to True in production

# Monitoring & Analytics
SENTRY_DSN=  # Sentry error tracking DSN (optional)
ANALYTICS_ENABLED=False
